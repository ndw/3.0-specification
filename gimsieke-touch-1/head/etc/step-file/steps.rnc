  element file-mkdir {
    name.ncname.attr?,
    common.attributes,
    use-when.attr?,
    step.attributes,
    attribute href { xsd:anyURI }?,
    attribute fail-on-error { xsd:boolean }?,
    (WithOption* & (Documentation|PipeInfo)*)
  }

Step-file-move =
  element file-move {
    name.ncname.attr?,
    common.attributes,
    use-when.attr?,
    step.attributes,
    attribute href { xsd:anyURI }?,
    attribute target { xsd:anyURI }?,
    attribute fail-on-error { xsd:boolean }?,
    (WithOption* & (Documentation|PipeInfo)*)
  }

Step-file-create-tempfile =
  element file-create-tempfile {
    name.ncname.attr?,
    common.attributes,
    use-when.attr?,
    step.attributes,
    attribute href { xsd:anyURI? }?,
    attribute suffix { xsd:string? }?,
    attribute prefix { xsd:string? }?,
    attribute delete-on-exit { xsd:boolean }?,
    attribute fail-on-error { xsd:boolean }?,
