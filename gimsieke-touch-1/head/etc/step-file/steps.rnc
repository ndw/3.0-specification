  }

Step-file-touch =
  element file-touch {
    name.ncname.attr?,
    common.attributes,
    use-when.attr?,
    step.attributes,
    attribute href { xsd:anyURI }?,
    attribute timestamp { xsd:dateTime? }?,
    attribute fail-on-error { xsd:boolean }?,
    (WithOption* & (Documentation|PipeInfo)*)
  }

